@{
    ViewData["Title"] = "Home";
}

<div class="welcome">
    <h1>Welcome to the MVC Application</h1>
    <p>Use the buttons below to navigate:</p>
    <div class="buttons">
        <a class="btn" href="/Teacher">Manage Teachers</a>
        <a class="btn" href="/Student">Manage Students</a>
        <a class="btn" href="/Event">Manage Events</a>
    </div>
</div>

<style>
    .welcome {
        text-align: center;
    }
    .welcome h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }
    .welcome p {
        font-size: 1.2rem;
        color: #666;
    }
    .buttons {
        margin-top: 2rem;
    }
    .buttons .btn {
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        margin: 0.5rem;
        display: inline-block;
        border-radius: 5px;
        background-color: #1e88e5;
        color: white;
        font-weight: 500;
        transition: background-color 0.3s;
    }
    .buttons .btn:hover {
        background-color: #1565c0;
    }
</style>
